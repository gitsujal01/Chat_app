	{
		this.rr = roomRepository;
	}
	
	//for sending and receiving messages
	@MessageMapping("/sendMessage/{roomId}")
	@SendTo("/topic/room/{roomId}")
	public Message sendMessage()
	{
		return null;
		
	}
}
